options=('!emptydirs')

function build_modules() {
        shopt -s globstar
        for d in */ ; do        
		cd "$d"
		echo
		echo "[!]: building $d"
		perl Makefile.PL
		make
		cd ..
        done
}

function install_modules() {
	shopt -s globstar
        for d in */ ; do        
		cd "$d"
		echo
		echo "[!]: Installing $d"
		make DESTDIR=$pkgdir install
		cd ..
	done
}

build() {
	build_modules
}

package() {
	install_modules
}
