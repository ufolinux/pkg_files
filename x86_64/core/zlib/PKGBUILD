pkgname=zlib
pkgver=1.2.11
pkgrel=2
arch=('x86_64')
depends=(glibc)
source=(https://zlib.net/$pkgname-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        ./configure --prefix=/usr
        make
}

package() {
        cd $pkgname-$pkgver
        make DESTDIR=$pkgdir install

        mkdir -p $pkgdir/lib
        mv -v $pkgdir/usr/lib/libz.so.* $pkgdir/lib
        ln -sfv ../../lib/$(readlink $pkgdir/usr/lib/libz.so) $pkgdir/usr/lib/libz.so
}
