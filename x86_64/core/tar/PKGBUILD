pkgname=tar
pkgver=1.34
pkgrel=1
arch=('x86_64')
depends=(glibc acl attr)
source=(https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        FORCE_UNSAFE_CONFIGURE=1  \
        ./configure --prefix=/usr \
                    --bindir=/bin
        make
}

package() {
        cd $pkgname-$pkgver

        make DESTDIR=$pkgdir install
}
