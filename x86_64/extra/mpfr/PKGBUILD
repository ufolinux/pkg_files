pkgname=mpfr
pkgver=4.1.0
pkgrel=1
arch=('x86_64')
depends=(glibc gmp)
source=(https://www.mpfr.org/$pkgname-$pkgver/$pkgname-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        ./configure --prefix=/usr        \
                    --enable-thread-safe

        make
}

package() {
        cd $pkgname-$pkgver
        make DESTDIR=$pkgdir install
}
