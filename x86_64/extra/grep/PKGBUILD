pkgname=grep
pkgver=3.7
pkgrel=1
arch=('x86_64')
depends=(glibc pcre)
source=(https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        ./configure --prefix=/usr --bindir=/bin
        make
}

package() {
	cd $pkgname-$pkgver
        make DESTDIR=$pkgdir install
}
