pkgname=gst-plugins-base
pkgver=1.21.2
pkgrel=1
arch=('x86_64')
depends=(
	# GStreamer family
	gstreamer

	# base
	graphene opus libtheora libxv sdl2 qt5
	zlib libglvnd wayland wayland-protocols libx11 libgudev libdrm)
makedepends=(valgrind bash-completion python3 mesa ninja bison)
source=(https://gstreamer.freedesktop.org/src/gst-plugins-base/gst-plugins-base-1.21.2.tar.xz)

prepare() {
	cd "${pkgname}-${pkgver}"

	mkdir -p build
}

build() {
	cd "${pkgname}-${pkgver}"/build

	meson \
	--wrap-mode=nofallback \
	--prefix=/usr \
	--buildtype=release	\
	-D package-origin=https://ufolinux.tk/ \
	-D gst-plugins-base:package-name="[GStreamer-BAD]: $pkgver - UFO" \
	-D gst-plugins-base:package-origin=https://ufolinux.tk/

	ninja
}

package() {
	cd "${pkgname}-${pkgver}"/build

	DESTDIR=$pkgdir ninja install
}
