pkgname=gst-plugins-bad
pkgver=1.21.2
pkgrel=1
arch=('x86_64')
depends=(
	# GStreamer family
	gstreamer gst-plugins-base

	# bad
	vulkan-icd-loader vulkan-headers
	bluez libavtp bzip2 webrtc-audio-processing
	nettle libxml2 qrencode json-glib libva libxkbcommon)
makedepends=(valgrind bash-completion python3 mesa ninja bison)
source=(https://gstreamer.freedesktop.org/src/gst-plugins-bad/gst-plugins-bad-1.21.2.tar.xz)

prepare() {
	cd "${pkgname}-${pkgver}"

	mkdir -p build
}

build() {
	cd "${pkgname}-${pkgver}"/build

	meson \
	--wrap-mode=nofallback \
	--prefix=/usr \
	--buildtype=release	\
	-D package-origin=https://ufolinux.tk/ \
	-D gst-plugins-bad:package-name="[GStreamer-BAD]: $pkgver - UFO" \
	-D gst-plugins-bad:package-origin=https://ufolinux.tk/

	ninja
}

package() {
	cd "${pkgname}-${pkgver}"/build

	DESTDIR=$pkgdir ninja install
}
