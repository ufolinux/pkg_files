pkgname=libxi
pkgver=1.7.10
pkgrel=1
arch=('x86_64')
makedepends=(libxtrans util-macros xorgproto)
source=(https://xorg.freedesktop.org/releases/individual/lib/libXi-$pkgver.tar.bz2)

build() {
	cd libXi-$pkgver
	./configure --prefix=/usr --libdir=/usr/lib --sysconfdir=/etc
	make
}

package() {
	cd libXi-$pkgver
	make DESTDIR=$pkgdir install
}
