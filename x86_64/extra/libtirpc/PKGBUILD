pkgname=libtirpc
pkgver=1.3.2
pkgrel=1
arch=('x86_64')
source=(https://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure			\
	--prefix=/usr			\
	--localstatedir=/var		\
	--disable-gssapi

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
