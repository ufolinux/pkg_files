pkgname=fltk
pkgver=1.3.8
pkgrel=1
arch=('x86_64')
depends=(xorg-server alsa-lib hicolor-icon-theme libjpeg libpng mesa)
makedepends=(doxygen)
source=(https://fltk.org/pub/$pkgname/$pkgver/$pkgname-$pkgver-source.tar.gz)

prepare() {
	cd $pkgname-$pkgver

	sed -i -e '/cat./d' documentation/Makefile
}

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr		\
	--enable-shared

	make

	make -C documentation html
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
