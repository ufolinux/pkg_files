pkgname=libpsl
pkgver=0.21.1
pkgrel=1
arch=('x86_64')
depends=(libidn2)
source=(https://github.com/rockdaboot/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	sed -i 's/env python/&3/' src/psl-make-dafsa

	./configure		\
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
